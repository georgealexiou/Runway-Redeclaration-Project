<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import org.comp2211.group6.view.RunwayView?>
<?import org.comp2211.group6.view.BreakdownView?>
<?import org.comp2211.group6.view.EditAnObstacleView?>
<?import org.comp2211.group6.view.CreateAnObstacleView?>
<?import org.comp2211.group6.view.LoadAnObstacleView?>
<?import org.comp2211.group6.view.FileView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.geometry.Insets?>

<fx:root type="javafx.scene.layout.GridPane"
         xmlns:fx="http://javafx.com/fxml"
         maxHeight="-Infinity"
         maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0">

  <columnConstraints>
              <ColumnConstraints minWidth="600" prefWidth="600"
                                 maxWidth="Infinity" halignment="CENTER" hgrow="ALWAYS">
              </ColumnConstraints>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="50" maxHeight="Infinity" vgrow="NEVER">
    </RowConstraints>
    <RowConstraints minHeight="350" maxHeight="Infinity" vgrow="ALWAYS">
    </RowConstraints>
    <RowConstraints maxHeight="200" vgrow="NEVER">
    </RowConstraints>
  </rowConstraints>
  <MenuBar GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" useSystemMenuBar="false">
       <menus>
           <Menu text="View">
              <items>
                <MenuItem text="Toggle View" onAction="#toggleView" fx:id="toggleViewButton"></MenuItem>
                <MenuItem text="Return to Runway View" onAction="#returnToRunwayView" fx:id="returnToRunwayViewButton"></MenuItem>
                <MenuItem text="Invert Colours" onAction="#invertColourScheme" fx:id="invertColoursButton"></MenuItem>
              </items>
           </Menu>
           <Menu text="Airports">
              <items>
                <MenuItem text="Load Airport" onAction="#loadAirport" fx:id="loadAirportButton"></MenuItem>
                <MenuItem text="Create new Airport" onAction="#createAirport" fx:id="createAirportButton"></MenuItem>
                <MenuItem text="Edit Airport" onAction="#editAirport" fx:id="editAirportButton"></MenuItem>
              </items>
           </Menu>
           <Menu text="Obstacles">
            <items>
              <MenuItem text="Load Obstacle" onAction="#loadObstacle" fx:id="loadObstacleButton"></MenuItem>
              <MenuItem text="Create Obstacle" onAction="#createObstacle" fx:id="createObstacleButton"></MenuItem>
              <MenuItem text="Edit Obstacle" onAction="#editObstacle" fx:id="editObstacleButton"></MenuItem>
            </items>
           </Menu>
           <Menu text="Calculations">
            <items>
              <MenuItem text="View Calculations" onAction="#viewCalculations" fx:id="viewCalculationsButton"></MenuItem>
            </items>
           </Menu>
       </menus>
  </MenuBar>

  <CreateAnObstacleView fx:id="createAnObstacleView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></CreateAnObstacleView> 
  <LoadAnObstacleView fx:id="loadAnObstacleView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></LoadAnObstacleView> 
  <EditAnObstacleView fx:id="editAnObstacleView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></EditAnObstacleView> 
  <BreakdownView fx:id="breakdownView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></BreakdownView>
  <RunwayView fx:id="runwayView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></RunwayView> 
  <FileView fx:id="fileView" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"></FileView>
  <VBox fx:id="splashScreen" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="true" alignment="CENTER">
    <Label text="Welcome to the Runway Redeclaration Tool">
          <font>
              <Font name="System Bold" size="32"></Font>
          </font>
    </Label>
    <Label text="Load an Airport to begin">
          <font>
              <Font name="System Bold" size="18"></Font>
          </font>
    </Label>
  </VBox>
  
  <VBox alignment="CENTER" MaxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="0">
      <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
      <Label text="Notifications" visible="true">
        <font>
          <Font name="System Bold Underline" size="14"></Font>
        </font>
      </Label>
      <Label fx:id="notificationLabel" visible="true">
      </Label>
    </VBox>
</fx:root>
